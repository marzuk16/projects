<%- include('../../partials/head.ejs') %>

<div class="container my-5">
    <div class="col-md-6 offset-md-3">
        <div class="card card-body">
            <div class="mb-4 text-center">
                <img
                    src="<%= author.profilePics %>"
                    class="rounded-circle img-fluid"
                    style="width: 300px; height: 300px;"
                >
            </div>
            <div>
                <p class="mb-1 ml-5"> <strong> Name : </strong> <%=author.profile.name%></p>
                <p class="mb-1 ml-5"> <strong> Title: </strong> <%=author.profile.title%></p>
                <p class="ml-5"> <strong> Bio: </strong> <%= author.profile.bio %> </p>
    
                <div class="text-center">
                    
                    <% if (author.profile.links.website) { %>
                        <span class="p-1">
                            <a
                                href="<%=author.profile.links.website%>" target="_blank" title="<%=author.profile.name%>'s website"
                            ><i class="fab fa-internet-explorer"></i></a>
                        </span>
                    <% } %>
                    <% if (author.profile.links.facebook) { %>
                        <span class="p-1">
                            <a
                                href="<%= author.profile.links.facebook%>" target="_blank"
                                title="<%= author.profile.name %>'s facebook"    
                            ><i class="fab fa-facebook"></i></a>
                        </span>
                    <% } %>
                    <% if (author.profile.links.github) { %>
                        <span class="p-1">
                            <a
                                href="<%= author.profile.links.github%>" target="_blank"
                                title="<%= author.profile.name %>'s github"
                            ><i class="fab fa-github"></i></a>
                        </span>
                    <% } %>
                    <% if (author.profile.links.linkedin) { %>
                        <span class="p-1">
                            <a
                                href="<%= author.profile.links.linkedin%>" target="_blank"
                                title="<%= author.profile.name %>'s linkedin"    
                            ><i class="fab fa-linkedin"></i></a>
                        </span>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="card card-body mt-3">
            <p> <strong>Post Created By <%= author.profile.name %> </strong> </p>
            <div class="row">
                <% if (author.profile.posts.length === 0) { %>
                    <div class="text-center text-muted">
                        <p>There is no post availabe right now</p>
                    </div>
                <% }else{ %>
                    <% for( let post of author.profile.posts.reverse()) { %>
                        <div class="card col-sm-5 m-2">
                            <% if (post.thumbnail) { %>
                                <img
                                    src="<%= post.thumbnail %>"
                                    alt="<%= post.title %>"
                                    class="card-img-top mt-3"
                                >
                            <% } %> 
                            <div class="card-body p-0">
                                <a href="/explorer/<%= post._id %>" style="color: #222">
                                    <p class="my-2"><%= post.title %> </p>
                                </a>
                            </div>
                        </div>
                    <% } %>
                <% } %>  
            </div>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %> 

<script src="/scripts/bookmarks.js"></script>

</body>
</html>